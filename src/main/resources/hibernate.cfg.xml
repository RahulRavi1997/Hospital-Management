<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 5.3//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-5.3.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="connection.url">jdbc:mysql://localhost/management?useSSL=false</property>
        <property name="connection.username">root</property>
        <property name="connection.password">test</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.release_mode">auto</property>
        <property name="connection.show_sql">true</property>
        <property name="javax.persistence.validation.mode">none</property>
        
        <mapping resource="address.hbm.xml"/>
        <mapping resource="physician.hbm.xml"/>
        <mapping resource="patient.hbm.xml"/>
        <mapping resource="user.hbm.xml"/>
        <mapping resource="address.hbm.xml"/>
        <mapping resource="visit.hbm.xml"/> 
        <mapping resource="Medicine.hbm.xml"></mapping>
        <mapping resource="Purchase.hbm.xml"></mapping>    
        <mapping resource="PurchaseDetails.hbm.xml"></mapping>        

    </session-factory>
</hibernate-configuration>
